<h4 class="ui center aligned medium icon header">
    <i class="circular orange american sign language interpreting icon"></i>
    Say Something
</h4>

<div class="ui two column grid">

    <div class="ten wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui small feed">
                    <h4 class="ui header">Activity</h4>
                    <%= render @messages %>
                </div>
            </div>
            <div class="extra content">
                <%= form_with(model: @message, local: true, url: message_path) do |form| %>

                <div class="field">
                    <div class="ui fluid icon input">
                        <%= form.text_field :body %>
                        <%= form.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
                    </div>
                </div>

                <% end %>
            </div>


        </div>
    </div>


    <div class="six wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="active item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>