<h4 class="ui center aligned medium icon header">
    <i class="circular orange american sign language interpreting icon"></i>
    Say Something
</h4>

<div class="ui two column grid">

    <div class="ten wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui small feed">
                    <h4 class="ui header">Activity</h4>
                    <% if @messages.any? %>
                    <% @messages.each do |message| %>
                    <div class="event">
                        <div class="content">
                            <div class="summary">
                                <em><%= message.user.name %>:</em> <%= message.body %>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    <% end %>
                </div>
            </div>
            <div class="extra content">
                <form class="ui reply form">
                    <div class="field">
                        <div class="ui fluid icon input">
                            <input type="text" placeholder="Message...">
                            <i class="bordered inverted orange edit icon"></i>
                        </div>
                    </div>

                </form>
            </div>


        </div>
    </div>


    <div class="six wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="active item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>